<Window x:Class="SundayWorshipPPTMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:SundayWorshipPPTMaker"
        mc:Ignorable="d"
        Title="WorshipPPT Maker" Height="500" Width="550">
    <Grid Margin="2" Background="Lavender" UseLayoutRounding="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="2.8*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>
        <Image Name="imageLogo" Stretch="Fill" Grid.ColumnSpan="6" />
        <Border Grid.Column="6" Grid.ColumnSpan="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Name="btnShowHelp" Margin="3">Help</Button>
                <Button Name="btnShowSettings" Grid.Column="1" Margin="3" Click="btnShowSettings_Click">Settings</Button>
            </Grid>
        </Border>

        <Label Grid.Row="1">Folder</Label>
        <TextBox x:Name="TxtOutputFolder" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="6" Margin="2" />
        <Button Name="BtnSelectFolder" Grid.Row="1" Grid.Column="8" Grid.ColumnSpan="3" Margin="2" Click="BtnSelectFolder_Click">Select Folder</Button>
        
        <Label Grid.Row="2">Base</Label>
        <TextBox Name="TxtBasePPT" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="6" />
        <Button Name="BtnBrowseBasePPT" Click="BtnBrowseSingleFile_Click" Grid.Row="2" Grid.Column="8" Grid.ColumnSpan="3" Margin="2">Browse</Button>

        <Label Grid.Row="3" Grid.RowSpan="3" VerticalAlignment="Center">Songs</Label>
        <ListBox Name="SongList" SelectionMode="Extended"
                 Grid.Row="3" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="6" />
        <StackPanel Grid.Row="3" Grid.RowSpan="3" Grid.Column="7" VerticalAlignment="Center">
            <Button Name="BtnOrderUp" Click="BtnOrderUp_Click">▲</Button>
            <Button Name="BtnOrderDown" Click="BtnOrderDown_Click">▼</Button>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.RowSpan="3" Grid.Column="8" Grid.ColumnSpan="3" VerticalAlignment="Center" Margin="2">
            <Button Name="BtnAddSongs" Click="BtnAddSongs_Click">Add</Button>
            <Button Name="BtnDelSongs" Click="BtnDelSongs_Click">Delete</Button>
        </StackPanel>

        <Label Grid.Row="6">Bible</Label>
        <ComboBox Name="CmbStartBook" IsEditable="True" SelectionChanged="CmbBook_SelectionChanged"  
                  Grid.Row="6" Grid.Column="1" />

        <xctk:IntegerUpDown Name="NumStartChapter" ValueChanged="NumStartChapter_ValueChanged"
                            Grid.Row="6" Grid.Column="2" Margin="4" Minimum="1" ClipValueToMinMax="True" />
        <TextBox Name="TxtStartChapter" TextChanged="TxtStartChapter_TextChanged"
                 Grid.Row="6" Grid.Column="2" Margin="3" Visibility="Collapsed"/>
        <TextBlock Grid.Row="6" Grid.Column="3">:</TextBlock>
        <xctk:IntegerUpDown Name="NumStartPassage" ValueChanged="NumStartPassage_ValueChanged" 
                            Grid.Row="6" Grid.Column="4" Margin="4" Minimum="1" ClipValueToMinMax="True"/>
        <TextBox Name="TxtStartPassage" TextChanged="TxtStartPassage_TextChanged"
                 Grid.Row="6" Grid.Column="4" Margin="3" Visibility="Collapsed"/>
        <TextBlock Grid.Row="6" Grid.Column="5">~</TextBlock>
        <ComboBox Name="CmbEndBook" IsEditable="True" SelectionChanged="CmbBook_SelectionChanged"
                  Grid.Row="6" Grid.Column="6" Grid.ColumnSpan="2" />
        
        <xctk:IntegerUpDown Name="NumEndChapter" ValueChanged="NumEndChapter_ValueChanged"
                            Grid.Row="6" Grid.Column="8" Margin="4" Minimum="1" ClipValueToMinMax="True" />
        <TextBox Name="TxtEndChapter" TextChanged="TxtEndChapter_TextChanged"
                 Grid.Row="6" Grid.Column="8" Margin="3" Visibility="Collapsed"/>
        <TextBlock Grid.Row="6" Grid.Column="9">:</TextBlock>
        <xctk:IntegerUpDown Name="NumEndPassage" ValueChanged="NumEndPassage_ValueChanged"
                            Grid.Row="6" Grid.Column="10" Margin="4" Minimum="1" ClipValueToMinMax="True" />
        <TextBox Name="TxtEndPassage" TextChanged="TxtEndPassage_TextChanged"
                 Grid.Row="6" Grid.Column="10" Margin="3" Visibility="Collapsed" />


        <Label Grid.Row="7">Prayer</Label>
        <TextBox Name="TxtPrayer" Grid.Row="7" Grid.Column="1" />
        <Label Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="3" HorizontalAlignment="Center">Title</Label>
        <TextBox Name="TxtTitle" Grid.Row="7" Grid.Column="5" Grid.ColumnSpan="6" Margin="2" />

        <Label Grid.Row="8">Preach</Label>
        <TextBox Name="TxtPreachLocation" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="6" />
        <Button Name="BtnBrowsePreach" Click="BtnBrowseSingleFile_Click"
                Grid.Row="8" Grid.Column="8" Grid.ColumnSpan="3" Margin="2">Browse</Button>

        <Label Grid.Row="9">Vid</Label>
        <TextBox Name="TxtVidLocation" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="6" />
        <Button Name="BtnBrowseVid" Click="BtnBrowseSingleFile_Click"
                Grid.Row="9" Grid.Column="8" Grid.ColumnSpan="3" Margin="2">Browse</Button>

        <Label Grid.Row="10">Birthday</Label>
        <CheckBox Name="CbBirth" Checked="CheckBox_CheckChanged" Unchecked="CheckBox_CheckChanged"
                  Grid.Row="10" Grid.Column="1" Margin="3" ></CheckBox>
        <Grid Name="BirthList" Visibility="Hidden" Grid.Row="10" Grid.Column="2" Grid.ColumnSpan="9" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <Label>List</Label>
            <TextBox Name="TxtBirthList" Grid.Column="1" VerticalAlignment="Center" Margin="2" />
        </Grid>

        <Label Grid.Row="11" VerticalAlignment="Center">FileName</Label>
        <TextBox Name="TxtOutputFileName" Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="6" VerticalAlignment="Center" Margin="2" />
        <Button Name="BtnDoTask" Grid.Row="11" Grid.Column="8" Grid.ColumnSpan="3" Margin="2" Click="DoTask">Go</Button>
    </Grid>
</Window>
